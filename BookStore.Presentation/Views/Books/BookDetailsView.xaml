<UserControl x:Class="BookStore.Presentation.Views.Books.BookDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Presentation.Views.Books"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Border Margin="10" Padding="10" Background="WhiteSmoke" CornerRadius="5">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Titel: " />
                <TextBlock Text="Författare: " />
                <TextBlock Text="ISBN: " />
                <TextBlock Text="Språk: " />
                <TextBlock Text="Utgiven: "/>
                <TextBlock Text="Format: " />
                <TextBlock Text="Pris" />
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding SelectedBook.Title}" />
                <TextBlock Text="{Binding SelectedBook.AuthorNames}" />
                <TextBlock Text="{Binding SelectedBook.Isbn13}" />
                <TextBlock Text="{Binding SelectedBook.Language}" />
                <TextBlock Text="{Binding SelectedBook.ReleaseDate, StringFormat={}{0:yyyy-MM-dd}}" />
                <TextBlock Text="{Binding SelectedBook.Format.Name}" />
                <TextBlock Text="{Binding SelectedBook.Price, StringFormat={}{0:C2}, ConverterCulture=sv-SE}" />
            </StackPanel>

            <GroupBox Grid.Column="2" Header="Lagerstatus" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding SelectedBook.StoreBooks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Text="{Binding Store.City}"
                                    FontWeight="SemiBold"
                                    Grid.Column="0" />

                                <TextBlock 
                                    Text="{Binding Store.Address}"
                                    Foreground="Gray"
                                    Margin="10 0 0 0"
                                    Grid.Column="1"/>    

                                <TextBlock 
                                    Grid.Column="2"
                                    Margin="10 0 0 0"
                                    Text="{Binding QuantityInStock, StringFormat={}{0} st}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <StackPanel Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">
                <Button Content="Redigera" Command="{Binding EditBookCommand}" />
                <Button Content="Ta bort" Command="{Binding DeleteBookCommand}" />
            </StackPanel>


        </Grid>
    </Border>
</UserControl>
