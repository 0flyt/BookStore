<UserControl x:Class="BookStore.Presentation.Views.Books.BooksView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Presentation.Views.Books"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="WhiteSmoke" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Sök bok"
            FontSize="24"
            FontWeight="SemiBold"
            VerticalAlignment="Center"
            Margin="10" />

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBox 
                Width="300" 
                Height="25"
                Padding="5"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            
            <Button 
                Content="Sök"
                Margin="5 0"
                Padding="5 2"
                Command="{Binding SearchCommand}"
                Background="#007ACC"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand" />
            <CheckBox 
                Content="Endast böcker i butik"
                IsChecked="{Binding ShowOnlyCurrentStore}" 
                VerticalAlignment="Center" Margin="10 0" />

            
            <Button 
                Content="Lägg till en ny bok" 
                Padding="5 0" 
                Command="{Binding AddBookCommand}" />

        </StackPanel>

        <TextBlock 
            Grid.Row="3" 
            Text="Sök på boktitel, författare, eller ISBN och tryck på sök."
            Margin="10"
            Visibility="{Binding IsBeforeSearch, Converter={StaticResource BoolToVisibilityConverter}}" />

        <TextBlock 
            Grid.Row="3" 
            Text="Inga böcker hittades."
            Margin="10"
            Visibility="{Binding IsEmptyResult, Converter={StaticResource BoolToVisibilityConverter}}" />


        <TextBlock 
            Grid.Row="2"
            Text="Klicka på en bok för att se detaljer om den." 
            Margin="10 0" 
            FontStyle="Italic" 
            Foreground="Gray"
            Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}}" />
        
        <DataGrid 
            Grid.Row="3" 
            HorizontalAlignment="Left"
            ItemsSource="{Binding Books}"
            SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            AutoGenerateColumns="False" 
            Margin="10"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            HeadersVisibility="Column"
            IsReadOnly="true"
            Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}}"
            >
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Författare" Binding="{Binding AuthorNames}" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre.Name}" />
                <DataGridTextColumn Header="Språk" Binding="{Binding Language}" />
                <DataGridTextColumn Header="Format" Binding="{Binding Format.Name}" />
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn13}" />
            </DataGrid.Columns>
        </DataGrid>

        <local:BookDetailsView 
            Grid.Row="4" 
            Visibility="{Binding IsBookSelected, Converter={StaticResource BoolToVisibilityConverter}}" />
        
        <ProgressBar Grid.Row="5" Height="10" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</UserControl>
