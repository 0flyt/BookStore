<UserControl x:Class="BookStore.Presentation.Views.Shell.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.Views.Shell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="#F8F8F8" Margin="0" >

        <TextBlock
            Text="Böcker" 
            FontWeight="Bold" 
            Margin="10 10 0 5" />

        <Button 
            Content="Sök bok"
            Command="{Binding ShowBooksCommand}"
            Style="{StaticResource NavButtonStyle}" />

        <TextBlock 
            Text="Författare" 
            FontWeight="Bold" 
            Margin="10 15 0 5" />

        <Button 
            Content="Sök författare"
            Command="{Binding ShowAuthorsCommand}"
            Style="{StaticResource NavButtonStyle}" />

        <TextBlock 
            Text="Lager" 
            FontWeight="Bold" 
            Margin="10 15 0 5" />

        <Button 
            Content="Lagerstatus" 
            Command="{Binding ShowInventoryCommand}"
            Style="{StaticResource NavButtonStyle}" />

    </StackPanel>
</UserControl>
