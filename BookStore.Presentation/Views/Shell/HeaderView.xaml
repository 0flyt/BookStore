<UserControl x:Class="BookStore.Presentation.Views.Shell.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.Views.Shell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="60"
             Background="White"
             >
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock 
            Text="BookStore"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="20 0" />

        <StackPanel 
            Grid.Column="1" 
            Orientation="Horizontal" 
            VerticalAlignment="Center" 
            Margin="0 0 20 0">
            
            <TextBlock 
                Text="{Binding Session.CurrentUser.FullName}"    
                VerticalAlignment="Center"      
                Margin="0 0 10 0" />
            
            <TextBlock 
                Text="{Binding Session.CurrentStore.CityAndAddress}" 
                VerticalAlignment="Center"
                Margin="0 0 10 0" />
            
            <Button 
                Content="Logga ut"
                Padding="5 2"
                Background="#FF007ACC"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Command="{Binding LogoutCommand}"
                Visibility="{Binding 
                    DataContext.Session.IsLoggedIn,
                    RelativeSource={RelativeSource AncestorType=Window},
                    Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
