<UserControl x:Class="BookStore.Presentation.Views.Authors.AuthorFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.Views.Authors"
             mc:Ignorable="d" 
             Height="150" Width="300">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock 
            Text="Förnamn:" 
            Grid.Row="0" 
            Grid.Column="0" 
            VerticalAlignment="Center" 
            Margin="0 0 5 5" />
        <TextBox 
            Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
            Grid.Row="0" 
            Grid.Column="1" 
            Margin="0 0 0 5" />

        <TextBlock 
            Text="Efternamn:" 
            Grid.Row="1" 
            Grid.Column="0" 
            VerticalAlignment="Center" 
            Margin="0 0 5 5" />

        <TextBox 
            Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="0 0 0 5" />

        <TextBlock 
            Text="Födelsedatum:" 
            Grid.Row="2" 
            Grid.Column="0" 
            VerticalAlignment="Center" 
            Margin="0 0 5 5" />
        <DatePicker 
            SelectedDate="{Binding BirthDate, Mode=TwoWay}" 
            Grid.Row="2" 
            Grid.Column="1" 
            Margin="0 0 0 5" />

        <StackPanel 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Grid.Row="4" 
            Grid.ColumnSpan="2" 
            Margin="0 10 0 0">
            
            <Button 
                Content="Spara" 
                Width="80" 
                Margin="0 0 5 0" 
                Command="{Binding SaveCommand}" />
            
            <Button 
                Content="Avbryt" 
                Width="80" 
                Command="{Binding CancelCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
