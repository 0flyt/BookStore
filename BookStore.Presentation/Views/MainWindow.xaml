<Window x:Class="BookStore.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation"
        xmlns:UI="clr-namespace:BookStore.Presentation.ViewModels" 
        xmlns:shell="clr-namespace:BookStore.Presentation.Views.Shell"
        xmlns:books="clr-namespace:BookStore.Presentation.Views.Books"
        xmlns:authors="clr-namespace:BookStore.Presentation.Views.Authors"
        xmlns:inventory="clr-namespace:BookStore.Presentation.Views.Inventory"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=UI:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="BookStore" MinHeight="800" MinWidth="1200">

    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" Height="10" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
        
        <shell:HeaderView 
            DataContext="{Binding Header}"
            Grid.Row="1" />

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <shell:NavigationView 
                Background="#f8f8f8"
                BorderBrush="#e0e0e0"
                BorderThickness="0 0 1 0"
                Grid.Column="0" 
                DataContext="{Binding Navigation}"
                Visibility="{Binding DataContext.Session.IsLoggedIn,
                            RelativeSource={RelativeSource AncestorType=Window},
                            Converter={StaticResource BoolToVisibilityConverter}}"
                IsEnabled="{Binding DataContext.Session.IsLoggedIn, RelativeSource={RelativeSource AncestorType=Window}}" />

            <ContentControl 
                Background="WhiteSmoke"
                Padding="15"
                Grid.Column="1" 
                Content="{Binding CurrentView}" />
        </Grid>

    </Grid>
</Window>
