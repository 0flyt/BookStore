<UserControl x:Class="BookStore.Presentation.Views.Inventory.InventoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Presentation.Views.Inventory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="WhiteSmoke" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Lagerstatus"
            FontSize="24"
            FontWeight="SemiBold"
            VerticalAlignment="Center"
            Margin="10" />

        <StackPanel 
            Grid.Row="1" 
            Orientation="Vertical" 
            Margin="10">

            <StackPanel 
                Orientation="Horizontal" 
                Margin="0 5">
                
                <TextBlock 
                    Text="Butik:" 
                    Width="30"
                    VerticalAlignment="Center" 
                    Margin="0 0 10 0" />
                
                <ComboBox 
                    Width="250"
                    ItemsSource="{Binding Stores}"
                    SelectedItem="{Binding SelectedStore}"
                    DisplayMemberPath="CityAndAddress" />
                
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">

                <TextBlock 
                    Text="Sök :"
                    Width="30"
                    Margin="0 0 10 0" 
                    VerticalAlignment="Center" />

                <TextBox 
                    Width="250"
                    HorizontalAlignment="Left"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Sök" Command="{Binding SearchInventoryCommand}" Margin="10 0" Padding="5 2" />

            </StackPanel>
            <TextBlock Text="Sök på boktitel, författare eller ISBN." Margin="40 0" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Titlar: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalTitles}" Margin="0 0 20 0"/>

            <TextBlock Text="Antal böcker: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalQuantity}" Margin="0 0 20 0"/>

            <TextBlock Text="Totalt värde: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalValue, StringFormat={}{0:N0} kr}"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <DataGrid 
                Margin="10"
                HorizontalAlignment="Left"
                ItemsSource="{Binding Inventory}"
                SelectedItem="{Binding SelectedInventory}"
                SelectionMode="Single"
                SelectionUnit="FullRow"
                AutoGenerateColumns="False" 
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                HeadersVisibility="Column"
                IsReadOnly="true">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Titel" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Författare" Binding="{Binding Authors}" />
                    <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" />
                    <DataGridTextColumn Header="Språk" Binding="{Binding Language}" />
                    <DataGridTextColumn Header="Format" Binding="{Binding Format}" />
                    <DataGridTextColumn Header="I lager" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn13}" />

                </DataGrid.Columns>
            </DataGrid>

            <StackPanel 
                Grid.Column="1" 
                Orientation="Horizontal" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left"
                Visibility="{Binding IsInventorySelected, Converter={StaticResource BoolToVisibilityConverter}}">

                <Button
                    Margin="10"
                    Padding="5 0"
                    FontSize="14"
                    Content="Ändra antal"
                    Command="{Binding EditInventoryCommand}"
                    IsEnabled="{Binding IsInventorySelected}" />

                <Button
                    Margin="0 10"
                    Padding="5 0"
                    FontSize="14"
                    Content="Nollställ antal"
                    Command="{Binding DeleteInventoryCommand}"
                    IsEnabled="{Binding IsInventorySelected}" />
            </StackPanel>

        </Grid>
        <ProgressBar Grid.Row="5" Height="10" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</UserControl>
