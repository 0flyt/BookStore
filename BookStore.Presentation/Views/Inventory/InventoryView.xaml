<UserControl x:Class="BookStore.Presentation.Views.Inventory.InventoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Presentation.Views.Inventory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Butik:" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox
                Width="250"
                ItemsSource="{Binding Stores}"
                SelectedItem="{Binding SelectedStore}"
                DisplayMemberPath="CityAndAddress"
                />
        </StackPanel>

        <DataGrid 
            HorizontalAlignment="Left"
            Grid.Row="1"
            ItemsSource="{Binding Inventory}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Titel"
                    Binding="{Binding Isbn13Navigation.Title}"
                    Width="200" />

                <DataGridTextColumn
                    Header="Författare"
                    Binding="{Binding Isbn13Navigation.AuthorNames}"
                    Width="200" />

                <DataGridTextColumn
                    Header="ISBN"
                    Binding="{Binding Isbn13}"
                    Width="120" />

                <DataGridTextColumn
                    Header="Antal"
                    Binding="{Binding QuantityInStock}"
                    Width="80" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
