<Window x:Class="BookStore.Presentation.Views.Inventory.InventoryFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation.Views.Inventory"
        mc:Ignorable="d"
        Title="Redigera antal böcker i butik" Height="300" Width="420" WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="{Binding Store.CityAndAddress}"
            FontSize="18"
            FontWeight="SemiBold"
            Margin="0 0 0 15"
            HorizontalAlignment="Center"/>

        <StackPanel 
            Grid.Row="1" 
            Margin="0 0 0 15"
            HorizontalAlignment="Center">

            <TextBlock 
                Text="{Binding Title}" 
                FontSize="14" />
            
            <TextBlock 
                Text="{Binding Isbn13}" 
                FontSize="12" 
                Foreground="Gray" />
            
        </StackPanel>


        <StackPanel 
            Grid.Row="2" 
            Margin="0 0 0 20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            
            <TextBlock 
                Text="Antal i lager:"
                Margin="10 0"
                FontWeight="SemiBold"
                FontSize="16"
                VerticalAlignment="Center"/>
            
            <TextBox
                Margin="10 5"
                Padding="3"
                Width="50"
                Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                PreviewTextInput="OnlyDigits" 
                FontWeight="Bold"
                FontSize="16" />
            
        </StackPanel>

        <StackPanel 
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0 0 0 0">

            <Button 
                Content="Spara"
                Width="90"
                Margin="0 0 10 0"
                Command="{Binding SaveCommand}" />
            <Button 
                Content="Avbryt"
                Width="90"
                Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
