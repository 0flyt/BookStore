<Window x:Class="BookStore.Presentation.Views.Inventory.InventoryFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation.Views.Inventory"
        mc:Ignorable="d"
        Title="Lägg till/ändra i butik" Height="450" Width="400">
    <Grid Margin="20">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Text="{Binding Store.CityAndAddress}"
            FontSize="16"
            FontWeight="SemiBold"
            Margin="0 0 0 15" />

        <TextBlock 
            Grid.Row="1"
            Grid.Column="0"
            Text="Bok:"
            VerticalAlignment="Center" />
        <ComboBox 
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding Books}"
            SelectedItem="{Binding SelectedBook}"
            DisplayMemberPath="Title"
            MinHeight="28" />

        <TextBlock 
            Grid.Row="2"
            Grid.Column="0"
            Text="Antal:"
            VerticalAlignment="Center"
            Margin="0 10 0 0" />
        <TextBox 
            Grid.Row="2"
            Grid.Column="1"
            Margin="0 10 0 0"
            Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
            MinHeight="28" />

        <StackPanel 
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0 20 0 0">

            <Button 
                Content="Spara"
                Width="90"
                Margin="0 0 10 0"
                Command="{Binding SaveCommand}" />
            <Button 
                Content="Avbryt"
                Width="90"
                Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
