<Application 
    x:Class="BookStore.Presentation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BookStore.Presentation" 
    xmlns:vmLogin="clr-namespace:BookStore.Presentation.ViewModels.Login"
    xmlns:viewsLogin="clr-namespace:BookStore.Presentation.Views.Login"
    xmlns:vmBooks="clr-namespace:BookStore.Presentation.ViewModels.Books"
    xmlns:viewsBooks="clr-namespace:BookStore.Presentation.Views.Books"
    xmlns:vmAuthors="clr-namespace:BookStore.Presentation.ViewModels.Authors"
    xmlns:viewsAuthors="clr-namespace:BookStore.Presentation.Views.Authors"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <DataTemplate DataType="{x:Type vmLogin:LoginViewModel}">
            <viewsLogin:LoginView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmBooks:BooksViewModel}">
            <viewsBooks:BooksView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vmAuthors:AuthorsViewModel}">
            <viewsAuthors:AuthorsView />
        </DataTemplate>

        <Style 
            x:Key="NavButtonStyle" 
            TargetType="Button">
            <Setter Property="Margin" Value="10 2" />
            <Setter Property="Padding" Value="5 2" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
